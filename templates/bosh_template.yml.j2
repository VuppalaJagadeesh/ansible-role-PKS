iaas-configuration:
  vcenter_host: {{ vcenter_host_ip }}
  vcenter_username: {{ vcenter_user }}
  vcenter_password: {{ vcenter_pwd }}
  datacenter: {{ vcenter_datacenter }}
  disk_type: {{ bosh_vm_disk_type }}
  ephemeral_datastores_string: {{ ephemeral_datastore }}
  persistent_datastores_string: {{ persistent_datastore }}
  ssl_verification_enabled: false
  nsx_networking_enabled: {{ nsx_networking_enabled }}
  nsx_mode: {{ nsx_mode }}
  nsx_address: {{ nsx_manager_ip }}  
  nsx_username: admin
  nsx_password: {{ nsx_manager_root_pwd }}
  nsx_ca_certificate: "{{ lookup('file', '/tmp/ca_edited.log') }}"
  bosh_vm_folder: {{ bosh_vm_folder }}
  bosh_template_folder: {{ bosh_template_folder }}
  bosh_disk_path: {{ bosh_disk_path }}
director-configuration:
  ntp_servers_string: {{ ntp_servers }}
  resurrector_enabled: true
  post_deploy_enabled: true
  bosh_recreate_on_next_deploy: true
az-configuration:
  - name: {{ mgmt_az_name }}
    cluster: {{ bosh_mgmt_cluster_name }}
    resource_pool: {{ mgmt_rp }}
{% if compute_az == '1' %}
  - name: {{ compute_az_1_name }}
    cluster: {{ compute_cluster_name }}
    resource_pool: {{compute_rp }}
{% elif compute_az == '2' %}
  - name: {{ compute_az_1_name }}
    cluster: {{ compute_cluster_name }}
    resource_pool: {{compute_rp }}
  - name: {{ compute_az_2_name }}
    cluster: {{ compute_cluster_name }}
    resource_pool: {{compute_rp }}
{% elif compute_az == '3' %}
  - name: {{ compute_az_1_name }}
    cluster: {{ compute_cluster_name }}
    resource_pool: {{compute_rp }}
  - name: {{ compute_az_2_name }}
    cluster: {{ compute_cluster_name }}
    resource_pool: {{compute_rp }}
  - name: {{ compute_az_3_name }}
    cluster: {{ compute_cluster_name }}
    resource_pool: {{compute_rp }}
{% endif %}
networks-configuration:
  icmp_checks_enabled: false
  networks:
  - name: {{ main_network_name }}
    service_network: false
    subnets:
    - iaas_identifier: {{ vsphere_network_name_for_main_network }}
      cidr: {{ main_network_cidr }}
      reserved_ip_ranges: {{ reserverd_ip_ranges_for_main_network }}
      dns: {{ dns_server }}
      gateway: {{ ops_gw }}
      availability_zone_names:
{% if compute_az == '1' %}
      - {{ mgmt_az_name }}
      - {{ compute_az_1_name }} 
{% elif compute_az == '2' %}
      - {{ mgmt_az_name }}
      - {{ compute_az_1_name }} 
      - {{ compute_az_2_name }}
{% elif compute_az == '3' %}
      - {{ mgmt_az_name }}
      - {{ compute_az_1_name }} 
      - {{ compute_az_2_name }}
      - {{ compute_az_3_name }}
{% endif %}
network-assignment:
  singleton_availability_zone:
    name: {{ mgmt_az_name }}
  network:
    name: {{ main_network_name }}